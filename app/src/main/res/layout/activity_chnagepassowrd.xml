<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Change Password"
            android:layout_gravity="center"
            android:gravity="start"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/one"
        android:id="@+id/view"
        android:background="@color/gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/view"
        android:layout_above="@+id/bottom"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Old Password"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your old password"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="New Password"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input your new passsword"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Confrim Password"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/confrim_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your confrim password"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:inputType="textPassword"
                android:textSize="15dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="16dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/edit_bg__blue_qt"
                android:textColor="@color/white"
                />


        </LinearLayout>


    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">








    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/rectangle"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginRight="130dp"
        android:layout_marginLeft="130dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"/>


</RelativeLayout>