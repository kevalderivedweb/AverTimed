<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Edit Profile"
            android:layout_gravity="center"
            android:gravity="start"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/one"
        android:id="@+id/view"
        android:background="@color/gray"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/view"
        android:visibility="visible"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="First Name"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/fs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your first name"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Last Name"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/ls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="input your last name"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:inputType="none"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Email Address"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your email address"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Country"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your country"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="State"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your state"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="City"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your City"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Address"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your address"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Mobile"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input your Mobile"
                android:background="@drawable/edit_bg_3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15dp"
                android:inputType="none"
                android:layout_marginRight="10dp"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray_2"
                android:text="Upload Profile Picture"
                android:layout_gravity="center"
                android:gravity="start"
                android:textSize="15dp"
                android:textStyle="normal"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:id="@+id/txt_injury"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/upload_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera"/>

                <ImageView
                    android:id="@+id/upload_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/re_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_rechnage"/>

            </LinearLayout>




            <TextView
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="16dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_bg__blue_qt"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="16dp"
                android:visibility="invisible"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_bg__blue_qt"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>